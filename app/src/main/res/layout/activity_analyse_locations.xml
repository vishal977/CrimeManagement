<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyseLocations">

   <!-- <fragment
        android:id="@+id/analyse_autocomplete_fragment"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Location"
        android:id="@+id/basicText"
        android:text="Chandni Chowk"
        android:textSize="20dp"
        android:maxLines="1"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:background="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="20dp"
        android:padding="15sp"/>

    <fragment
        android:id="@+id/map_analyse_location"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/basicText"
        tools:context="com.heisenberg.beherchange.AnalyseLocations" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/short_analysis"
        android:layout_alignBottom="@+id/map_analyse_location"
        android:gravity="center"
        android:visibility="invisible">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/crime_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place_name"
                    android:padding="3dp"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginLeft="15dp"
                    android:textStyle="italic"
                    android:text="Crime Based Review (3/5)" />

                <RatingBar
                    android:id="@+id/indi1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="47dp"
                    android:padding="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/user_label"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/user_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/crime_label"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:text="User Based Review - 3.8/5"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <RatingBar
                    android:id="@+id/indi2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indi1"
                    android:padding="5dp"
                    android:layout_toEndOf="@+id/user_label"
                    android:numStars="5"
                    android:rating="3.8"
                    android:layout_marginLeft="15dp"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Detailed Analysis"
                    android:id="@+id/det_rep"
                    android:background="@drawable/buttonstyle4"
                    android:textSize="15dp"
                    android:includeFontPadding="true"
                    android:layout_marginBottom="45dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Delhi has a lower crime rate than similarly sized metro areas."
                    android:drawableLeft="@drawable/ic_like"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
